<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/note_section_background"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Warning Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/note_section_header"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚠️ Thoát bài kiểm tra"
            android:textColor="#DC2626"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Warning Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/note_field_background"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="🚫 Bạn có chắc chắn muốn hủy bài kiểm tra?"
            android:textColor="@color/note_text_primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quiz_progress_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Tiến độ hiện tại: 3/10 câu"
            android:textColor="@color/note_text_secondary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="⚠️ Điểm số hiện tại sẽ bị mất!"
            android:textColor="#DC2626"
            android:textSize="14sp"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Continue Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continue_quiz"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/note_button_style"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="📝 Tiếp tục"
            android:textAllCaps="false"
            android:textColor="@color/note_text_button"
            android:textSize="15sp" />

        <!-- Exit Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_exit_quiz"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/note_button_style"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="🚪 Thoát"
            android:textAllCaps="false"
            android:textColor="@color/note_text_button"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>