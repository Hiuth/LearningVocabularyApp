<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Header Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Top Section with Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:layout_marginEnd="16dp" />

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Vocabulary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Vocabulary"
                    android:textSize="16sp"
                    android:textColor="#6B7280" />

            </LinearLayout>

        </LinearLayout>

        <!-- Add New Word Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_word_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add New Word"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/green_button_background"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:elevation="2dp"
            android:layout_marginBottom="24dp" />

        <!-- Add New Word Form (Initially Hidden) -->
        <include
            android:id="@+id/add_word_form"
            layout="@layout/add_new_word"
            android:visibility="gone"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

    <!-- Words List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- RecyclerView for Words -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewWords"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No words yet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#9CA3AF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap 'Add New Word' to get started"
                android:textSize="14sp"
                android:textColor="#9CA3AF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>