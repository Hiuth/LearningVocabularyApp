<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    
    <!-- Main card layer -->
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/quiz_card_start"
                android:centerColor="@color/quiz_card_center"
                android:endColor="@color/quiz_card_end"
                android:angle="90"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/quiz_card_border" />
        </shape>
    </item>
    
</layer-list>